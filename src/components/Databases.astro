---

<section id="databases" class="py-16 md:py-24 relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-10 md:mb-16 px-2">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-3 md:mb-4">
        One Tool, <span class="gradient-text">All Your Databases</span>
      </h2>
      <p class="text-sm md:text-lg text-slate-400 max-w-2xl mx-auto">
        Connect to any database with a unified interface.
      </p>
    </div>

    <!-- Database Cards -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 md:gap-6">
      {databases.map((db) => (
        <div class={`relative p-4 md:p-6 rounded-xl md:rounded-2xl bg-gradient-to-br ${db.color} border ${db.borderColor} transition-all duration-300 hover:scale-105`}>
          <div class="flex flex-col items-center text-center">
            <div class="mb-3 md:mb-4 [&>svg]:w-10 [&>svg]:h-10 md:[&>svg]:w-12 md:[&>svg]:h-12">
              <Fragment set:html={db.icon} />
            </div>
            <h3 class="text-base md:text-xl font-semibold text-white mb-1 md:mb-2">{db.name}</h3>
            <p class="text-xs md:text-sm text-slate-400 hidden md:block">{db.description}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Demo Mode Banner -->
    <div class="mt-8 md:mt-12 p-4 md:p-6 rounded-xl md:rounded-2xl bg-gradient-to-r from-primary-900/30 to-accent-900/30 border border-primary-500/20">
      <div class="flex flex-col items-center text-center gap-3 md:flex-row md:justify-center md:gap-4 md:text-left">
        <div class="flex items-center gap-3">
          <svg class="w-6 h-6 md:w-8 md:h-8 text-primary-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          <div>
            <h4 class="text-sm md:text-base font-semibold text-white">No Database? No Problem!</h4>
            <p class="text-xs md:text-sm text-slate-400">Try Demo Mode - Zero setup required.</p>
          </div>
        </div>
        <a
          href="https://app.libredb.org"
          target="_blank"
          rel="noopener noreferrer"
          class="w-full md:w-auto px-6 py-2 bg-primary-600 hover:bg-primary-500 text-white text-sm font-medium rounded-lg transition-colors text-center"
        >
          Try Demo Mode
        </a>
      </div>
    </div>
  </div>
</section>
