<script>
  document.querySelectorAll('.faq-trigger').forEach((trigger) => {
    trigger.addEventListener('click', () => {
      const index = trigger.getAttribute('data-faq-index');
      const content = document.querySelector(`[data-faq-content="${index}"]`);
      const icon = trigger.querySelector('.faq-icon');
      const iconWrapper = trigger.querySelector('.faq-icon-wrapper');
      const isExpanded = trigger.getAttribute('aria-expanded') === 'true';

      // Toggle current FAQ
      trigger.setAttribute('aria-expanded', (!isExpanded).toString());
      content?.classList.toggle('hidden');

      // Rotate icon (+ to -)
      if (!isExpanded) {
        icon?.classList.add('rotate-45');
        iconWrapper?.classList.add('bg-primary-600');
        iconWrapper?.classList.remove('bg-slate-800');
      } else {
        icon?.classList.remove('rotate-45');
        iconWrapper?.classList.remove('bg-primary-600');
        iconWrapper?.classList.add('bg-slate-800');
      }
    });
  });
</script>

<style>
  .faq-icon.rotate-45 {
    transform: rotate(45deg);
  }
</style>
